<!DOCTYPE html>
<html>
<head>
	<title>Search</title>
</head>
<body>
	Enter Plate number: <input id="plate" type="text" name="plate"><br>
	<a id="butn" onclick="loadurl()"><button>Search</button></a>

</body>
<script type="text/javascript">
	function loadurl() {
		var plate = document.getElementById("plate");
		var butn = document.getElementById("butn");
		var plateval = plate.value;
		console.log(plateval + "is here");
		butn.href = "/getdata/"+plateval;
	}
	
</script>
